    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
           
        }

        .song-container {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            text-align: center;
            color: #333;
            max-width: 600px;
            width: 100%;
        }

        .song-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .song-description {
            font-size: 16px;
            margin-top: 20px;
        }

        .custom-audio-player {
            margin-top: 20px;
            text-align: center;
        }

        audio {
            width: 100%;
            margin-top: 10px;
        }

        .audio-controls {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
        }

        button {
            background-color: #125382;
            color: #fff;
            border: none;
            padding: 10px 20px;
            margin: 0 10px;
            cursor: pointer;
            transition: background-color 0.3s;
            border-radius: 5px;
        }

        button:hover {
            background-color: #1C2833;
        }

        input[type="range"] {
            width: 100px;
        }

        .download-link,
        .search-again-link {
            display: inline-block;
            background-color: #125382;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            font-size: 18px;
            margin-top: 20px;
            text-decoration: none;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .download-link:hover,
        .search-again-link:hover {
            background-color: #1C2833;
        }

        #download-status {
            margin-top: 10px;
            font-weight: bold;
            color: #125382;
        }

        .keywords {
            margin-top: 20px;
            font-style: italic;
            color: #555;
        }
        .show {
          font-family: 'Arial', sans-serif;
          background-color: #f4f4f4;
          margin: 10px;
          padding: 0;
          display: flex;
          flex-wrap: wrap;
          justify-content: center;
        }
        .song-container-show {
          width: 200px;
          margin: 10px;
          background-color: #fff;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          border-radius: 8px;
          overflow: hidden;
          transition: transform 0.2s ease-in-out;
          cursor: pointer;
          position: relative;
        }
        .song-container-show:hover {
          transform: scale(1.05);
        }
        .song-thumbnail-show {
          width: 100%;
          height: 150px;
          object-fit: cover;
        }
        .song-info-show {
          padding: 10px;
        }
        .song-title-show {
          font-weight: bold;
          margin-bottom: 5px;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
          width: 100%;
        }
        .song-container-show:hover .song-title-show {
          white-space: normal;
          overflow: visible;
          text-overflow: unset;
          position: absolute;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
          background-color: #fff;
          padding: 10px;
          border-radius: 8px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .song-description-show {
          font-size: 12px;
          color: #777;
          overflow: hidden;
          text-overflow: ellipsis;
          white-space: nowrap;
          width: 100%;
          transition: all 0.3s ease-in-out;
        }
        .song-container-show:hover .song-description-show {
          white-space: normal;
          overflow: visible;
          text-overflow: unset;
          position: absolute;
          bottom: 0;
          left: 0;
          right: 0;
          background-color: rgba(255, 255, 255, 0.8);
          padding: 10px;
          border-radius: 0 0 8px 8px;
        }
        .song-container-show .song-description-show a {
          text-decoration: none;
          color: inherit;
        }
